{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build main file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-D", "__FLAG_MOVE_SEM__",
        "-I${workspaceFolder}/include",
        "-g",
        "${workspaceFolder}/src/**.cpp",
        "-o",
        "${workspaceFolder}/bin/runner"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build main file."
    }
  ]
}